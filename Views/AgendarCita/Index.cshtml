
@{
    ViewData["Title"] = "Agendar Citas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="container container-fluid">
        
        <div class="titulo">
        
            <h2>
                <span>Registro de Pacientes para agendar una cita</span>
            </h2>
   
        </div>

        <section class="parrafo">
            <p>Ingrese los siguientes datos:</p>
        </section>
        
        <form class="formulario" id="formulario">
            <div class="form-group row">
                <label for="inputCedula1" class="col-sm-1 col-form-label">Cedula</label>
                <div class="col-sm-5">
                    <input type="number" class="form-control" id="inputCedula" placeholder="Cedula" required>

                </div>
            </div>
            <div class="form-group row">
                <label for="inputNombre1" class="col-sm-1 col-form-label">Nombre</label>
                <div class="col-sm-5">
                    <input type="text" class="form-control" id="inputNombre" placeholder="Nombre" required>
                    <div class="invalid-tooltip">Campo Requerido</div>
                </div>
            </div>

            <div class="form-group row">
                <label for="inputApellido1" class="col-sm-1 col-form-label">Apellido</label>
                <div class="col-sm-5">
                    <input type="text" class="form-control" id="inputApellido" placeholder="Apellido" required>

                </div>
            </div>

            <div class="form-group row">
                <label for="inputTelefono1" class="col-sm-1 col-form-label">Telefono</label>
                <div class="col-sm-5">
                    <input type="number" class="form-control" id="inputTelefono" placeholder="Telefono" required>

                </div>
            </div>
            <p id="alertaCel"></p>
            <p id="alertaTel"></p>

            <div class="boton">
                <div class="form-group row">
                    <div class="col-sm-10">
                        <button type="submit" onclick="ValidarFormulario()" class="btn btn-primary">Registrar Paciente</button>
                     
                    </div>
                </div>
            </div>
        </form>


    </div>
    
</div>


